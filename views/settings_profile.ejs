        } catch (err) {
            alert(`Error disconnecting ${device_id}: ${err.message}`);
            console.error(err);
        } finally {
            clearTimeout(timeoutId); // extra safety
            btn.disabled = false;
            btn.innerHTML = originalText; // restore original button
        }
    }
